{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<h1>Connexion</h1>

<form action="{{ path('login')}}" method="post">
    <input type="text" placeholder="Nom d'utilisateur" name="_username" value="{{ lastUsername }}">
    <input type="password" placeholder="Mot de passe" name="_password">

    <button type="submit">Connexion</button>

</form>

{% endblock %}
